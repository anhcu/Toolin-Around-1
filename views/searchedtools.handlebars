<!-- RENDERING THE TOOL-DETAILS TEMPLATE FOR EACH OF THE USER'S TOOLS -->
{{#if no_results}}
  <header class="col s12">
  </header>
  <div class="col s12"> 
    <p>No tools found for {{search}}!</p>
  </div>
{{/if}}
{{#each tools}}
<section>
    <a href="/tools/{{id}}">
        <div class="row tool-and-owner indigo-text text-darken-2">
          <h3 class="col s12 l7 tool-name">{{name}}</h3>
          <p class="col s12 l5 tool-owner">posted by {{user.name}} in {{user.neighborhood.name}}</p>
          <p class="col s12">{{description}}</p>
        </div>
    </a>
</section> 
{{/each}}